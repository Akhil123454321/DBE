<form action="/notes/search" method="POST"></form>
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Search for a DB</h1>
      <div class="form-group">
            <input type="text" class="form-control" name="db_id" placeholder="Enter the DB ID">
        </div>
        <button class="btn btn-primary btn-block" type="submit">
            Search 
          </button>
    </div>
  </div>
  </form>

{{#if db_dets}}
<div class="container-fluid">
  <div class="row">
    <div class="table-wrapup">
  <table class="table table-bordered table-dark" style="text-align: center;">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">DB_ID</th>
      <th scope="col">DB_Env</th>
      <th scope="col">Mon/Yr Added</th>
      <th scope="col">RFI_RFC#</th>
      <th scope="col">Company</th>
      <th scope="col">LOB</th>
      <th scope="col">Host</th>
      <th scope="col">OS_ID</th>
      <th scope="col">DBMS_Type</th>
      <th scope="col">DB_Port</th>
      <th scope="col">Cluster_ID</th>
      <th scope="col">DBA_Support_Team</th>
      <th scope="col">Created_By</th>
      <th scope="col">Created_Date</th>
      <th scope="col">Updated_Date</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  {{#each db_dets}}
  <tr>
      <td scope="col">{{_id}}</td>
      <td scope="col">{{db_id}}</td>
      <td scope="col">{{db_env}}</td>
      <td scope="col">{{Mon_yr_added}}</td>
      <td scope="col">{{RFI_RFC}}</td>
      <td scope="col">{{company}}</td>
      <td scope="col">{{business_line}}</td>
      <td scope="col">{{host_name}}</td>
      <td scope="col">{{os_id}}</td>
      <td scope="col">{{dbms_type}}</td>
      <td scope="col">{{db_port}}</td>
      <td scope="col">{{cluster_id}}</td>
      <td scope="col">{{dba_support_team}}</td>
      <td scope="col">{{created_by}}</td>
      <td scope="col">{{created_date}}</td>
      <td scope="col">{{updated_date}}</td>
      <td scope = "col"><a href="/users/security-check">Edit</a></td>

      
      {{!-- <tr scope="col">{{updated_date}}</tr> --}}
  </tr>
  {{else}}
  <div class="alert alert-danger">
      <p>No DB with this ID exists!</p>
  </div>
  {{/each}}
  </tbody>
  </table>
  </div>
</div>
</div>
{{/if}}